<%- include partials/header.ejs %> 

<%- include partials/main_nav.ejs %>  

<main>
      <div class="uk-container my-5">
        <div class="uk-card uk-card-default uk-card-hover">
          <div>
            <div class="uk-card-body">
            <img src="/Assets/images/Logo1.png" alt="" class="mx-auto d-block" style="height: 80px; width: 80px;">
            <h2 class="text-center">Let's Keep in Touch</h2>

              <!-- BEGIN SECTION : FORM  -->
              <form class="uk-form-horizontal my-5 w-50 d-block mx-auto">

                <div >
                    <!-- FIRST NAME -->
                    <div class="mb-3">
                        <label class="uk-form-label uk-text-large" for="form-horizontal-text">First Name</label>
                        <div class="uk-form-controls">
                            <input class="uk-form-large " id="form-horizontal-text" type="text" placeholder="John / Jane">
                        </div>
                    </div>

                    <!-- LAST NAME -->
                    <div class="mb-3">
                        <label class="uk-form-label uk-text-large" for="form-horizontal-text">Last Name</label>
                        <div class="uk-form-controls">
                            <input class="uk-form-large " id="form-horizontal-text" type="text" placeholder="Doe">
                        </div>
                    </div>

                    <!-- EMAIL -->
                    <div class="mb-3">
                        <label class="uk-form-label uk-text-large" for="form-horizontal-text">Email</label>
                        <div class="uk-form-controls">
                            <input class="uk-form-large " id="form-horizontal-text" type="text" placeholder="address@server.com">
                        </div>
                    </div>

                    <!-- PHONE NUMBER -->
                    <div class="mb-3">
                        <label class="uk-form-label uk-text-large" for="form-horizontal-text">Phone Number</label>
                        <div class="uk-form-controls">
                            <input class="uk-form-large " id="form-horizontal-text" type="text" placeholder="123-456-7890">
                        </div>
                    </div>

                    <!-- TEXTAREA -->
                    <div class="uk-margin">
                        <textarea class="uk-textarea uk-text-large" rows="5" placeholder="Optional Message Here"></textarea>
                    </div>

                </div>
                <p class="text-content text-center mt-5 my-2">Let's work hard everyday in building a world that is</p>
                <h4 class="text-content text-center mt-0"> Good&nbsp;&nbsp;&nbsp;Fun&nbsp;&nbsp;&nbsp;Beautiful&nbsp;&nbsp;&nbsp;Together</h3>

                <!-- SUBMIT AND RESET -->
                <div class="text-center">
                    <button class="uk-button uk-button-primary " type="submit">Submit</button>
                    <button class="uk-button uk-button-secondary " type="reset">Reset</button>
                </div>  

              </form> 
              <!-- END SECTION : FORM  -->
            </div>
          </div>
        </div>
      </div>
    </main>

<%- include partials/bottom_nav.ejs %>           

